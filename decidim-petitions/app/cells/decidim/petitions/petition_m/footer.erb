<div class="card__footer">
  <div class="card__support">
    <% if model.closed? %>
      <%= cell(
        "decidim/progress_bar",
        progress_bar_progress,
        total: progress_bar_total,
        units_name: "decidim.petitions.petitions.petition.votes",
        element_id: "petition-#{model.id}-votes-count",
        small: true
      )
      %>
    <% end %>
    <%= link_to t("participate", scope: "decidim.petitions.petitions.petition"), resource_path, class: "card__button button secondary button--sc small light" %>
  </div>
</div>
